{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist-server",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "sourceMap": true,
    "declaration": true
  },
  "include": ["server.ts", "types.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist", "dist-server", "**/*.tsx", "**/*.jsx", "**/*.js", "**/*.mjs", "src/**/*", "components/**/*", "*.config.*"]
}